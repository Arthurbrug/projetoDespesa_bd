CREATE TABLE JAVA_CATEGORIA (
    ID_CATEGORIA NUMBER, 
    CATEGORIA VARCHAR2 (50),
    CONSTRAINT PK_CATEGORIA PRIMARY KEY (ID_CATEGORIA)
    );
    
    // criando a tabela despesa
    
    CREATE TABLE JAVA_DESPESA (
        ID_DESPESA NUMBER,
        DESCRICAO VARCHAR2 (100),
        VALOR NUMBER (10,2),
        DATA DATE,
        ID_CATEGORIA NUMBER,
        CONSTRAINT PK_DESPESA PRIMARY KEY (ID_DESPESA),
        CONSTRAINT FK_DESPESA_CATEGORIA FOREIGN KEY (ID_CATEGORIA) REFERENCES JAVA_CATEGORIA(ID_CATEGORIA)
        ON DELETE CASCADE
    );
    
    
